{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">
        <a class="create" href="/students/create">Novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Aluno</th>
                    <th>Email</th>
                    <th>Peso</th>
                    <th>Altura</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {%for student in students%}
                    <tr>
                        <td>
                        <span style="background-image: url({{student.avatar_url}}"></span>
                        {{student.name}}</td>
                        <td>{{student.email}}</td>
                        <td>{{student.weight}}</td>
                        <td>{{student.height}}</td>
                        <td><a href="/students/{{student.id}}">Ver</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}

