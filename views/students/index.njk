{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">
        <a class="create" href="/students/create">Novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Professor</th>
                    <th>Aula</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {%for teacher in teachers%}
                    <tr>
                        <td>
                        <span style="background-image: url({{teacher.avatar_url}}"></span>
                        {{teacher.name}}</td>
                        <td>{{teacher.services}}</td>
                        <td><a href="/teachers/{{teacher.id}}">Ver</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}

